<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="#EBA6C6">

    <!-- Score Text -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:textSize="26sp"
        android:textColor="@color/truewhite"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/lilitaone_regular"
        tools:text="Your Final Score" />

    <!-- Result Display -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="24sp"
        android:textColor="@color/truewhite"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="16dp"
        android:fontFamily="@font/lilitaone_regular"
        tools:text="2/3" />

    <!-- Encouragement Text -->
    <TextView
        android:id="@+id/encouragementText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Great job! Keep it up!"
        android:textSize="18sp"
        android:textColor="@color/truewhite"
        android:gravity="center"
        android:paddingTop="8dp"
        android:fontFamily="@font/lilitaone_regular"
        tools:text="Great job! Keep it up!" />

    <!-- OK Button -->
    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@null"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:fontFamily="@font/lilitaone_regular" />
</LinearLayout>
